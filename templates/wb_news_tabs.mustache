{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "wbTabs"
        "groupednews": [
            "firstitem": 1
            "news": [
                {
                    'bgimage' => '/local/wb_news/img/wb.jpg',
                    'icon' => '/local/wb_news/img/icon.png',
                    'headline' => 'News 1',
                    'subheadline' => 'Image and Icon',
                    'description' => 'Image and Icon',
                    'btnlink' => 'https://link1.com',
                    'btntext' => 'Read More',
                    'headerimage' => 1
                }
            ]
        ]
    }
}}

<ul class="nav nav-tabs wb_news" id="wb_news_tab-{{id}}" role="tablist">
    {{#tabs}}
    <li class="nav-item">
        <a class="nav-link {{#firstitem}}active{{/firstitem}}" id="{{id}}-tab" data-toggle="tab" href="#{{id}}" role="tab" aria-controls="{{id}}" aria-selected="{{#firstitem}}true{{/firstitem}}{{^firstitem}}false{{/firstitem}}">
            {{title}}
        </a>
    </li>
    {{/tabs}}
</ul>
<div class="tab-content wb_news" id="wb_news_tab_content">
    {{#tabs}}
    <div class="tab-pane fade {{#firstitem}}show active{{/firstitem}}" id="{{id}}" role="tabpanel" aria-labelledby="{{id}}-tab">
        <div class="container mt-5">
            <div class="row">
                {{#news}}
                <div class="col-md-3">
                    {{#headerimage}}
                    {{> local_wb_news/wb_news_card_headerimage}}
                    {{/headerimage}}
                    {{^headerimage}}
                    {{> local_wb_news/wb_news_card_bgimage}}
                    {{/headerimage}}
                </div>
                {{/news}}
            </div>
        </div>
    </div>
    {{/tabs}}
</div>
