{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id" => "news Masonary 1",
        "news": [
            {
                'bgimage' => '/local/wb_news/img/wb.jpg',
                'icon' => '/local/wb_news/img/icon.png',
                'headline' => 'News 1',
                'subheadline' => 'Image and Icon',
                'description' => 'Image and Icon',
                'btnlink' => 'https://link1.com',
                'btntext' => 'Read More',
                'headerimage' => 1
            }
        ]
    }
}}

<div class="container mt-5 wb_news">
    <div class="masonry">
        {{#editmode}}
            <div class="wb-news-addeditbutton btn btn-primary"
                data-instanceid="{{instanceid}}">
                {{#str}} addnewnews, local_wb_news {{/str}}
            </div>
            <div class="wb-news-addeditbutton btn btn-primary"
                data-isinstance="true">
                {{#str}} addinstance, local_wb_news {{/str}}
            </div>
            <div class="wb-news-addeditbutton btn btn-primary"
                data-id="{{instanceid}}"
                data-isinstance="true">
                {{#str}} editinstance, local_wb_news {{/str}}
            </div>
            <div class="wb-news-deletebutton btn btn-primary"
                data-id="{{instanceid}}"
                data-isinstance="true">
                {{#str}} deleteinstance, local_wb_news {{/str}}
            </div>
        {{/editmode}}
        {{#news}}
            {{#headerimage}}
                {{> local_wb_news/wb_news_card_headerimage}}
            {{/headerimage}}
            {{^headerimage}}
                {{> local_wb_news/wb_news_card_bgimage}}
            {{/headerimage}}
        {{/news}}
    </div>
</div>



{{#js}}
    require(['local_wb_news/editnews'], function(fn) {
        fn.init({{instanceid}});
    });
{{/js}}