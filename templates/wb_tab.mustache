
    <style>
        .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
            background-color: #e9f2f9;
            border-color: #e9f2f9;
            color: #004085;
        }
        .wb_news_tabcontainer, .section-content {
            background-color: #f8fbfd;
            overflow
            padding: 2rem;
            border-radius: .25rem;
        }
        .section-content .btn-primary {
            background-color: #0056b3;
            border-color: #0056b3;
        }
       .row {
            align-items: stretch; /* Make columns equal height */
        }

        .text-column {
            flex: 1; /* Take remaining space */
        }

        .image-column {
            position: relative;
            padding-left: 20px;
            padding-right: 0;
            overflow: visible; /* Hide overflow */
        }

        .image-stick-out {
            position: absolute;
            left: calc(50% + 15px);
            transform: translateX(-50%); /* Center horizontally */
            width: 110%; /* Extend beyond column */
            height: auto;
        }

        .image-stick-out img {
            width: 100%;
            height: auto;
        }
    </style>


<div class="container m-4 py-4 wb_news_tabcontainer">
    {{^btntext}}
    {{#btnlink}}<a href="{{btnlink}}" class="stretched-link"></a> {{/btnlink}}
    {{/btntext}}
    <div class="row my-4">
        <div class="col-lg-6">
            <div class="section-content">
                {{#icon}}
                <div class="text-left">
                    <img src="{{icon}}" class="card-icon mb-2 text-center" alt="Icon">
                </div>
                {{/icon}}
                <h3>{{headline}}</h3>
                <p>
                    {{description}}
                </p>
                {{#btntext}}
                    <a href="{{btnlink}}" class="btn btn-primary mt-auto">{{btntext}}</a>
                {{/btntext}}
            </div>
        </div>
        <div class="col-lg-6 image-column">
        {{#bgimage}}
        <div class="image-stick-out">
            <img src="{{bgimage}}" class="img-fluid" alt="Mentoring Program">
        </div>
        {{/bgimage}}
        </div>
    </div>
</div>
