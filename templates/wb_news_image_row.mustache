{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container mt-5 wb_news" data-id="{{id}}">
    {{#editmode}}
        {{> local_wb_news/edit}}
    {{/editmode}}
    {{#news}}
	<div class="col-md-10 row m-auto {{#additionaldata.left}}flex-row-reverse{{/additionaldata.left}}">
                <div class="col-md-6
                no-gutter p-4 d-flex flex-column pl-3">
                    {{#headline}}
                    <div class="row">
                        <div class="col-md-10 m-auto">
                            <h1 class="font-weight-light" style="font-size: 4rem">{{.}}</h1>
                        </div>
                    </div>
                    {{/headline}}
                    {{#subheadline}}
                    <div class="row">
                        <div class="col-md-10 m-auto">
                            <h2  class="font-weight-light" style="font-size: 3rem">{{.}}</h2>
                        </div>
                    </div>
                    {{/subheadline}}
                    {{#shortdescription}}
                    <div class="row">
                        <div class="col-md-10 m-auto">
                            <p  class="font-weight-light" style="font-size: 1.2rem">{{.}}</p>
                        </div>
                    </div>
                    {{/shortdescription}}
                    {{#detailviewurl}}
                        {{#additionaldata.showbutton}}
                        <div class="row mt-3">
                            <div class="col-md-10 m-auto">
                                <a class="btn btn-primary btn-lg" role="button" href="{{detailviewurl}}">{{#str}}to_offer, local_wb_news{{/str}}
                                    <i class="fa-solid fa-arrow-right ml-2"></i>
                                </a>
                            </div>
                        </div>
                        {{/additionaldata.showbutton}}
                    {{/detailviewurl}}
                </div>
                 <div class="col-md-6 
                  no-gutter" style="min-height: 500px">
                    {{#headerimage}}
                        <img class="img-fluid w-100" style="object-fit:{{#additionaldata.objectfit}}{{.}}{{/additionaldata.objectfit}}
                        {{^additionaldata.objectfit}}cover{{/additionaldata.objectfit}}; border-radius: 100px 0 0 100px; height: 500px;" src="{{headerimage}}" alt="">
                    {{/headerimage}}
                    {{#bgimage}}
                        <img class="img-fluid w-100" style="object-fit:cover; border-radius: 100px 0 0 100px; height: 500px;"  src="{{bgimage}}" alt="">
                    {{/bgimage}}
                </div>
                {{#editmode}}
        {{> local_wb_news/editsinglenews}}
    {{/editmode}}
	</div>
    {{/news}}
</div>
