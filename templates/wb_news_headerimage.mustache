{{!
    @template local_wb_news/wb_news_headerimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "news": [
            {
                'bgimage' => '/local/wb_news/img/wb.jpg',
                'icon' => '/local/wb_news/img/icon.png',
                'headline' => 'News 1',
                'subheadline' => 'Image and Icon',
                'description' => 'Image and Icon',
                'btnlink' => 'https://link1.com',
                'btntext' => 'Read More'
            }
        ]
    }
}}

<div class="container mt-5 wb_news">
    <div class="row">
        {{#news}}
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100">
                {{^btntext}}
                {{#btnlink}}<a href="{{btnlink}}" class="stretched-link"></a> {{/btnlink}}
                {{/btntext}}
                {{#bgimage}}
                <img class="w-100 img-fluid" src="{{bgimage}}">
                {{/bgimage}}
                <div class="card-body">
                {{#icon}}
                <div class="text-center">
                    <img src="{{icon}}" class="card-icon mb-2 text-center" alt="Icon">
                </div>
                {{/icon}}
                <h5 class="card-title">{{headline}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{subheadline}}</h6>
                <p class="card-text">{{description}}</p>
                </div>
                <div class="card-footer">
                {{#btntext}}
                    <a href="{{btnlink}}" class="btn btn-primary mt-auto">{{btntext}}</a>
                {{/btntext}}
                </div>
            </div>
        </div>
        {{/news}}
    </div>
</div>
