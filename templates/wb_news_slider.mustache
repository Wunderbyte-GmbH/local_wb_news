{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id" => "news Slider 1",
        "groupednews": [
            "firstitem": 1
            "news": [
                {
                    'bgimage' => '/local/wb_news/img/wb.jpg',
                    'icon' => '/local/wb_news/img/icon.png',
                    'headline' => 'News 1',
                    'subheadline' => 'Image and Icon',
                    'description' => 'Image and Icon',
                    'btnlink' => 'https://link1.com',
                    'btntext' => 'Read More',
                    'headerimage' => 1
                }
            ]
        ]
    }
}}

<div id="wb_news_carousel-{{id}}" class="carousel slide container mt-4 wb_news" data-ride="carousel" data-id="{{id}}">
    <div class="carousel-inner py-2">
        {{#groupednews}}
            <div class="carousel-item{{#firstitem}} active{{/firstitem}}">
                <div class="row">
                    {{#news}}
                        <div class="col-md-3">
                            {{#headerimage}}
                                {{> local_wb_news/wb_news_card_headerimage}}
                            {{/headerimage}}
                            {{^headerimage}}
                                {{> local_wb_news/wb_news_card_bgimage}}
                            {{/headerimage}}
                        </div>
                    {{/news}}
                </div>
            </div>
        {{/groupednews}}
    </div>
    <a class="carousel-control-prev" href="#wb_news_carousel-{{id}}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#wb_news_carousel-{{id}}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

{{#js}}
    require(['local_wb_news/editnews'], function(fn) {
        fn.init({{instanceid}});
    });
{{/js}}